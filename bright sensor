아두이노

void setup() {
  pinMode(13, OUTPUT);
  Serial.begin(9600);
}

void loop(){
  int s = analogRead(A0);

  Serial.println(s);
  
  if(s < 440) 
    digitalWrite(13, HIGH);
  else 
    digitalWrite(13, LOW);
  
  delay(500);
}

프로세싱

import processing.serial.*;
Serial p;

void setup(){
  p = new Serial(this, "COM4", 9600);
  size(400, 400);
}

void draw(){
  if(p.available() > 0){
    String m = p.readStringUntil('\n');

    if(m != null){
      print(m);
    }
  }
}


